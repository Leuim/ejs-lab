        <%if(item.category === 'desserts'){ %>
            <h4><%= item.name %></h4>
            <p><%= item.price %></p>
            <p><%= item.rating %></p>
            <p><%= item.details %></p>
        <%}%>
    <%})%>
    <h2>Sides</h2>
    <% menu.forEach((item, i) =>{ %>
        <%if(item.category === 'sides'){ %>
            <h4><%= item.name %></h4>
            <p><%= item.price %></p>
            <p><%= item.rating %></p>
            <p><%= item.details %></p>
        <%}%>
    <%})%>
</body>
</html>